<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:src="@drawable/ic_exit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_logout"
            app:layout_constraintVertical_bias="0.25">

            <ImageView
                android:id="@+id/img_appicon"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_light_bulb" />

            <ImageView
                android:id="@+id/img_playicon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="@+id/img_appicon"
                app:layout_constraintStart_toStartOf="@+id/img_appicon"
                app:layout_constraintTop_toBottomOf="@+id/img_appicon"
                app:srcCompat="@drawable/ic_brain" />

            <TextView
                android:id="@+id/txt_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/img_playicon"
                app:layout_constraintStart_toStartOf="@+id/img_playicon"
                app:layout_constraintTop_toBottomOf="@+id/img_playicon" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:rowCount="2"
                android:columnCount="2"
                app:layout_constraintEnd_toEndOf="@+id/txt_play"
                app:layout_constraintStart_toStartOf="@+id/txt_play"
                app:layout_constraintTop_toBottomOf="@+id/txt_play">

                <ImageView
                    android:id="@+id/img_score_board_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_gravity="center"
                    android:layout_row="0"
                    android:layout_column="0"
                    app:srcCompat="@drawable/ic_trophy" />

                <TextView
                    android:id="@+id/txt_leader_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:hint="Leader Board"/>

                <ImageView
                    android:id="@+id/img_settings_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_gravity="center"
                    android:layout_row="0"
                    android:layout_column="1"
                    app:srcCompat="@drawable/ic_bell" />

                <TextView
                    android:id="@+id/txt_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:hint="Settings"/>

            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>